{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": [
            "node",
            "dotenv",
            "uuid"
        ],
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
          "@app/*": ["src/*"]
        }
    },
    "files": [
      "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
      "./src/**/*.js",
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "!node_modules/@types",
      "./dist"
    ]
}